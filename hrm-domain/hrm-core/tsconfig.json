{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "module": "Node16",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2023"],
    "strict": false,
    "declaration": true,
    "resolveJsonModule": true
  },

  "include": ["**/*.js", "**/*.json", "**/*.ts"],
  "exclude": ["node_modules", "unit-tests", "dist", "**/*.test.ts", "**/*.test.js"],
}
