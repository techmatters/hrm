{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "ts-node": {
    // It is faster to skip typechecking.
    "transpileOnly": true,
    "files": true
  }
}
