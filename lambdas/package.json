    "@tsconfig/node14": "^1.0.0",
    "@types/aws-lambda": "^8.10.72",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.26",
    "@types/node-fetch": "^2.5.10",
    "@types/redis": "^2.8.29",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "compile": "run-p compile:contact-retrieve-recording-url compile:contact-retrieve-transcript",
    "compile:hrm-ssm-cache": "cd src/lib/hrm-ssm-cache && npm ci && cd ../../../ && npx tsc src/lib/hrm-ssm-cache/*.ts",
    "compile:contact-retrieve-recording-url": "cd src/contact-retrieve-recording-url && npm ci && cd ../../ && npx tsc src/contact-retrieve-recording-url/*.ts",
    "compile:contact-retrieve-transcript": "cd src/contact-retrieve-transcript && npm ci && cd ../../ && npx tsc src/contact-retrieve-transcript/*.ts",
    "docker:build": "run-p docker:build:contact-retrieve-recording-url docker:build:contact-retrieve-transcript",
    "docker:build:contact-retrieve-recording-url": "docker build -t lambdas-contact-retrieve-recording-url --build-arg lambda_name=contact-retrieve-recording-url -f Dockerfile ../",
    "docker:build:contact-retrieve-transcript": "docker build -t lambdas-contact-retrieve-transcript --build-arg lambda_name=contact-retrieve-transcript -f Dockerfile ../",
    "docker:build-and-run:contact-retrieve-recording-url": "run-s docker:build:contact-retrieve-recording-url docker:run:contact-retrieve-recording-url",
    "docker:build-and-run:contact-retrieve-transcript": "run-s docker:build:contact-retrieve-transcript docker:run:contact-retrieve-transcript",
    "docker:run:contact-retrieve-recording-url": "docker run -p 9000:8080 -e hrm_env=local -e completed_sqs_queue_url=local lambdas-contact-retrieve-recording-url",
    "docker:run:contact-retrieve-transcript": "docker run -p 9000:8080 -e hrm_env=local -e completed_sqs_queue_url=local lambdas-contact-retrieve-transcript",
    "test:contact-retrieve-recording-url": "curl -XPOST \"http://localhost:9000/2015-03-31/functions/function/invocations\" -d '{}'",
    "test:contact-retrieve-transcript": "curl -XPOST \"http://localhost:9000/2015-03-31/functions/function/invocations\" -d \"$(cat src/contact-retrieve-transcript/testPayload.json)\""
  }
}
