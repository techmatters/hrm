    "strict": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./scripts-dist"
  },
  "include": ["src/**/*.ts","scripts/**/*.ts"],
}
