{
  "name": "@hrm/jobs",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "awslocal": "aws --endpoint http://localhost:4566",
    "install:all": "run-p install:lib install:contact",
    "install:contact": "run-p install:contact-*",
    "install:contact-complete": "cd src/contact-complete && npm ci",
    "install:contact-retrieve-recording-url": "cd src/contact-retrieve-recording-url && npm ci",
    "install:contact-retrieve-transcript": "cd src/contact-retrieve-transcript && npm ci",
    "install:lib": "run-p install:lib:*",
    "install:lib:hrm-s3-client": "cd src/lib/hrm-s3-client && npm ci",
    "install:lib:hrm-twilio-client": "cd src/lib/hrm-twilio-client && npm ci",
    "install-and-compile": "run-s install compile",
    "compile": "run-s compile:lib compile:contact",
    "compile:contact": "run-p compile:contact-*",
    "compile:contact-complete": "npx tsc src/contact-complete/*.ts",
    "compile:contact-retrieve-recording-url": "npx tsc src/contact-retrieve-recording-url/*.ts",
    "compile:contact-retrieve-transcript": "npx tsc src/contact-retrieve-transcript/*.ts",
    "compile:lib": "run-p compile:lib:*",
    "compile:lib:hrm-s3-client": "npx tsc src/lib/hrm-s3-client/*.ts",
    "compile:lib:hrm-twilio-client": "npx tsc src/lib/hrm-twilio-client/*.ts",
    "docker:build": "run-p docker:build:contact*",
    "docker:build:contact-complete": "docker build -t lambdas-contact-complete --build-arg lambda_name=contact-complete -f Dockerfile ../",
    "docker:build:contact-retrieve-recording-url": "docker build -t lambdas-contact-retrieve-recording-url --build-arg lambda_name=contact-retrieve-recording-url -f Dockerfile ../",
    "docker:build:contact-retrieve-transcript": "docker build -t lambdas-contact-retrieve-transcript --build-arg lambda_name=contact-retrieve-transcript -f Dockerfile ../",
    "docker:run": "run-p docker:run:contact*",
    "docker:compose:lambdas:up": "completed_sqs_queue_url=$(npx ts-node tests/getCompleteQueueUrl.ts) docker-compose -f lambdas.docker-compose.yml up -d",
    "docker:compose:lambdas:down": "docker-compose -f lambdas.docker-compose.yml down",
    "docker:compose:lambdas:logs": "docker-compose -f lambdas.docker-compose.yml logs -f",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose -f lambdas.docker-compose.yml -f docker-compose.yml down",
    "docker:compose:logs": "docker-compose logs -f",
    "lint": "./node_modules/.bin/eslint --ext ts .",
    "lint:fix": "npm run lint -- --fix",
    "localstack:bootstrap": "cdklocal bootstrap",
    "localstack:deploy": "cdklocal deploy --all --outputs-file ./cdk/outputs.json",
    "localstack:destroy": "cdklocal destroy --all",
    "localstack:diff": "cdklocal diff",
    "localstack:init": "run-s compile docker:compose:up localstack:bootstrap localstack:deploy",
    "localstack:logs": "run-s docker:compose:logs",
    "localstack:synth": "cdklocal synth --all",
    "test": "run-s install:all test:unit test:localstack",
    "test:docker:contact-complete": "curl -XPOST \"http://localhost:9000/2015-03-31/functions/function/invocations\" -d \"$(cat src/contact-complete/tests/testPayload.json)\"",
    "test:docker:contact-retrieve-recording-url": "curl -XPOST \"http://localhost:9001/2015-03-31/functions/function/invocations\" -d \"$(cat src/contact-retrieve-recording-url/tests/testPayload.json)\"",
    "test:docker:contact-retrieve-transcript": "curl -XPOST \"http://localhost:9002/2015-03-31/functions/function/invocations\" -d \"$(cat src/contact-retrieve-transcript/tests/testPayload.json)\"",
    "test:localstack": "run-s test:localstack:e2e",
    "test:localstack:e2e": "run-s localstack:init test:localstack:e2e:run",
    "test:localstack:e2e:quick": "run-s localstack:deploy test:localstack:e2e:run",
    "test:localstack:e2e:run": "jest tests/e2e",
    "test:unit": "run-s compile test:unit:run",
    "test:unit:run": "jest src/**/tests/unit/*.test.ts src/lib/**/tests/unit/*.test.ts"
  }
}
