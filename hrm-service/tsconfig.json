{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2019"],
    "resolveJsonModule": true
  },

  "include": [
    "src/**/*.js",
    "src/**/*.json",
    "src/**/*.ts"
  ]
}