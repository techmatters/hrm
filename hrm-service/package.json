{
  "name": "@tech-matters/hrm-service",
  "version": "0.0.0",
  "description": "The easiest way to run the tests locally is to run the test DB in docker.",
  "scripts": {
    "start": "run-s test:service:migrate start:run",
    "start:run": "cd dist && node ./bin/www",
    "build-and-start": "npm run build && npm run start",
    "docker:build": "docker build -t hrm-service -f Dockerfile ../",
    "docker:compose:db:up": "cd ./docker-database && docker compose up -d",
    "docker:compose:db:down": "cd ./docker-database && docker compose down",
    "docker:compose:test:up": "docker compose -f ./docker-compose-test.yml up -d",
    "docker:compose:test:down": "docker compose -f ./docker-compose-test.yml down",
    "test": "run-s test:migrate test:unit test:service",
    "test:unit": "jest unit-tests",
    "test:service": "run-s docker:compose:test:up test:service:migrate test:service:run docker:compose:test:down",
    "test:service:migrate": "POSTGRES_PORT=5433 node ./service-tests/db-init/migrate",
    "test:service:run": "cross-env POSTGRES_PORT=5433 AWS_REGION=eu-west-1 SSM_ENDPOINT=http://localhost:4566 jest --verbose --maxWorkers=1 --forceExit service-tests",
    "test:service:ci": "run-s test:service:ci:migrate test:service:ci:run",
    "test:service:ci:migrate": "cross-env POSTGRES_PORT=5433 CI=true RDS_PASSWORD=postgres node ./service-tests/db-init/migrate",
    "test:service:ci:run": "cross-env POSTGRES_PORT=5433 AWS_REGION=eu-west-1 CI=true TWILIO_ACCOUNT_SID=ACxxx TWILIO_AUTH_TOKEN=xxxxxx RDS_PASSWORD=postgres jest --verbose --maxWorkers=1 --coverage",
    "test:coverage": "run-s docker:compose:test:up test:service:migrate test:coverage:run docker:compose:test:down",
    "test:coverage:run": "cross-env POSTGRES_PORT=5433 AWS_REGION=eu-west-1 jest --verbose --maxWorkers=1 --coverage",
    "test:migrate": "run-s test:service:migrate",
    "db:create-migration": "sequelize migration:generate --name ",
    "db:undo-last": "sequelize db:migrate:undo",
    "lint": "eslint --ext js,ts .",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tech-matters/hrm.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tech-matters/hrm/issues"
  },
  "homepage": "https://github.com/tech-matters/hrm#readme",
  "dependencies": {
    "@tech-matters/hrm-ssm-cache": "^1.0.0",
    "aws-sdk": "^2.1231.0",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "debug": "^4.1.1",
    "deep-diff": "^1.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "http-errors": "^1.7.3",
    "js-yaml": "^3.13.1",
    "morgan": "^1.9.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pg-promise": "^10.11.1",
    "sequelize": "^6.16.2",
    "sequelize-cli": "^6.4.1",
    "swagger-ui-express": "^4.1.4",
    "twilio": "^3.58.0",
    "twilio-flex-token-validator": "^1.5.5"
  },
  "devDependencies": {
    "@tech-matters/hrm-types": "^1.0.0",
    "@types/deep-diff": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^25.2.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "chalk": "^4.0.0",
    "cross-env": "^7.0.3",
    "global-agent": "^3.0.0",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "jest-each": "^28.1.3",
    "lodash": "^4.17.21",
    "mockttp": "^3.2.2",
    "moment": "^2.29.4",
    "npm-run-all": "^4.1.5",
    "sequelize-mock": "^0.10.2",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "umzug": "^3.0.0",
    "util": "^0.12.2"
  }
}
