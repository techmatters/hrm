{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["*.ts"],
  "ts-node": {
    // It is faster to skip typechecking.
    "transpileOnly": true,
    "files": true
  }
}
